<script>
// Override the risk level in PDF generation
(function() {
    // Store original function
    const origGeneratePDF = window.generatePDF;
    
    if (origGeneratePDF) {
        window.generatePDF = function(email, breaches, count) {
            // Get current API data to know real status
            const emailInput = document.getElementById('email-input') || 
                             document.querySelector('input[type="email"]');
            const currentEmail = emailInput ? emailInput.value : email;
            
            // Try to fetch fresh status from API
            fetch(`/api/check-email?email=${encodeURIComponent(currentEmail)}`)
                .then(r => r.json())
                .then(data => {
                    if (data.ok) {
                        // Monkey-patch jsPDF text method temporarily
                        const origText = window.jsPDF.API.text;
                        window.jsPDF.API.text = function(text, x, y, options) {
                            if (typeof text === 'string') {
                                // Replace any hardcoded risk levels
                                text = text.replace('High risk level', 
                                    `${data.status.charAt(0).toUpperCase() + data.status.slice(1)} risk level`);
                                text = text.replace('Medium risk level', 
                                    `${data.status.charAt(0).toUpperCase() + data.status.slice(1)} risk level`);
                            }
                            return origText.call(this, text, x, y, options);
                        };
                        
                        // Call original function
                        origGeneratePDF(email, breaches, count);
                        
                        // Restore original method
                        setTimeout(() => {
                            window.jsPDF.API.text = origText;
                        }, 100);
                    } else {
                        // Fallback to original
                        origGeneratePDF(email, breaches, count);
                    }
                })
                .catch(() => {
                    // Fallback on error
                    origGeneratePDF(email, breaches, count);
                });
        };
        console.log('✅ PDF risk level override installed');
    }
})();
</script>
