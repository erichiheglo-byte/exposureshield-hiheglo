    <!-- JavaScript -->
    <script>
        // Global state
        const state = {
            currentEmail: '',
            currentBreaches: []
        };

        // Mobile Menu Toggle
        document.getElementById('mobileMenuBtn').addEventListener('click', function() {
            document.getElementById('mainNav').classList.toggle('active');
        });

        // Email Check Functionality
        document.getElementById('checkEmailBtn').addEventListener('click', checkEmailSecurity);
        document.getElementById('resetBtn').addEventListener('click', resetForm);

        // Enter key triggers check
        document.getElementById('emailInput').addEventListener('keydown', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                checkEmailSecurity();
            }
        });

        // Check Email Security
        async function checkEmailSecurity() {
            const email = document.getElementById('emailInput').value.trim();
            const loader = document.getElementById('loader');
            const defaultMessage = document.getElementById('defaultMessage');
            const resultsContainer = document.getElementById('resultsContainer');
            
            if (!email || !validateEmail(email)) {
                alert('Please enter a valid email address');
                return;
            }
            
            // Show loader, hide default message
            loader.style.display = 'block';
            defaultMessage.style.display = 'none';
            resultsContainer.style.display = 'none';
            
            try {
                // Call real backend API
                const res = await fetch(`/api/check-email?email=${encodeURIComponent(email)}`, {
                    method: "GET",
                    headers: { "Accept": "application/json" },
                    cache: "no-store"
                });

                const data = await res.json().catch(() => null);

                if (!res.ok) {
                    const msg = (data && (data.error || data.message)) 
                        ? (data.error || data.message) 
                        : `API error: ${res.status}`;
                    throw new Error(msg);
                }

                // Store in global state
                state.currentEmail = email;
                state.currentBreaches = Array.isArray(data?.breaches) ? data.breaches : [];

                // Display results with PDF upgrade section
                displayResults(email, state.currentBreaches);
                
            } catch (error) {
                showError("Unable to check email security. Please try again.");
            } finally {
                loader.style.display = 'none';
            }
        }

        function validateEmail(email) {
            const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return re.test(email);
        }

        function displayResults(email, breaches) {
            const resultsContainer = document.getElementById('resultsContainer');
            
            // Apply YOUR risk rules: 0=Low, 1=Medium, 2+=High
            const count = breaches.length;
            let riskLevel, riskClass;
            
            if (count === 0) {
                riskLevel = 'Low';
                riskClass = 'risk-low';
            } else if (count === 1) {
                riskLevel = 'Medium';
                riskClass = 'risk-medium';
            } else {
                riskLevel = 'High';
                riskClass = 'risk-high';
            }
            
            let breachesHTML = '';
            if (count > 0) {
                breachesHTML = `
                    <div class="result-header">
                        <h3>Security Alert</h3>
                        <span class="risk-badge ${riskClass}">Risk Level: ${riskLevel}</span>
                    </div>
                    <p>Your email <strong>${escapeHtml(email)}</strong> was found in <strong>${count}</strong> breach${count !== 1 ? 'es' : ''}.</p>
                    <div style="margin: 20px 0;">
                        ${breaches.map(breach => `
                            <div class="breach-item">
                                <div>
                                    <strong>${escapeHtml(breach?.Title || breach?.Name || 'Unknown')}</strong>
