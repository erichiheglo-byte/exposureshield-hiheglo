{
  "name": "exposureshield-backend",
  "version": "2.0.0",
  "description": "ExposureShield Production Backend API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node test-email.js",
    "deploy": "vercel --prod",
    "logs": "vercel logs",
    "env:check": "node -e \"console.log('Checking env vars...'); const required = ['ZOHO_USER', 'ZOHO_PASS', 'HIBP_API_KEY', 'JWT_SECRET']; required.forEach(v => console.log(v + ':', process.env[v] ? '✓' : '✗'));\""
